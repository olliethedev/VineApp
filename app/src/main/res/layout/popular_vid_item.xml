<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lex.vinepopular.vinepopular.PopularFragment">

    <data>

        <variable
            name="record"
            type="com.lex.vinepopular.vinepopular.models.PopularVids.Record" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:imageUrl="@{record.thumbnailUrl}"
                app:placeholder="@{@drawable/ic_camera_alt_black_24dp}"
                tools:src="@drawable/ic_camera_alt_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@{record.description}"
                tools:text="Description" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>